<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/LLinfowindow"
        android:layout_width="282dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingTop="5dip"
        android:paddingRight="10dip"
        android:paddingBottom="5dip">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stationName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="山隆高雄站01(超級換電站)"
                android:textSize="@dimen/text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/stationAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="高雄市小港區沿海三路26-3號"
                android:textSize="@dimen/text" />

            <TextView
                android:id="@+id/stationLatLng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="（22.531112, 120.370979）"
                android:textSize="@dimen/text" />

            <View
                android:layout_width="180dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@drawable/div" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/nowAttr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="現在狀況："
                android:textSize="@dimen/text" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/attrText1"
                    android:layout_width="189dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="連線異常"
                    android:textColor="@color/OK"
                    android:textSize="@dimen/text" />

                <!--                <ImageButton-->
                <!--                    android:id="@+id/imageButton"-->
                <!--                    android:layout_width="20dp"-->
                <!--                    android:layout_height="20dp"-->
                <!--                    android:layout_gravity="right"-->
                <!--                    android:layout_marginStart="1dp"-->
                <!--                    android:layout_toEndOf="@+id/attrText1"-->
                <!--                    android:layout_weight="1"-->
                <!--                    android:background="#00000000"-->
                <!--                    android:scaleType="fitXY"-->
                <!--                    app:srcCompat="@drawable/edit" />-->
                <Spinner
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-49dp"
                    android:layout_toEndOf="@+id/attrText1"
                    android:entries="@array/memo"
                    android:gravity="right" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/attrText2"
                    android:layout_width="127dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="數位電錶異常"
                    android:textColor="@color/OK"
                    android:textSize="@dimen/text" />

                <!--                <TextView-->
                <!--                    android:id="@+id/attr2"-->
                <!--                    android:layout_width="82dp"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:gravity="right"-->
                <!--                    android:text="@string/OK"-->
                <!--                    android:textColor="@color/OK"-->
                <!--                    android:textSize="@dimen/text" />-->
                <Spinner
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/memo"
                    android:gravity="right" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/attrText3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="某槽位上鎖失敗"
                    android:textColor="@color/NG"
                    android:textSize="@dimen/text" />

                <!--                <TextView-->
                <!--                    android:id="@+id/attr3"-->
                <!--                    android:layout_width="82dp"-->
                <!--                    android:layout_height="match_parent"-->
                <!--                    android:gravity="right"-->
                <!--                    android:text="@string/NG"-->
                <!--                    android:textColor="@color/NG"-->
                <!--                    android:textSize="@dimen/text" />-->
                <Spinner
                    android:layout_width="116dp"
                    android:layout_height="wrap_content"
                    android:entries="@array/memo"
                    android:gravity="right" />
            </LinearLayout>

            <View
                android:layout_width="180dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@drawable/div" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp">

                <TextView
                    android:id="@+id/memoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:gravity="left"
                    android:text="備註："
                    android:textSize="@dimen/text" />

                <EditText
                    android:id="@+id/edtMemo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="請輸入站點備註"/>

            </LinearLayout>

            <View
                android:layout_width="180dp"
                android:layout_height="2dp"
                android:layout_gravity="center"
                android:background="@drawable/div" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="現在位置："
                android:textSize="@dimen/text" />

            <TextView
                android:id="@+id/nowAddr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="高雄市小港區沿海三路26-2號"
                android:textSize="@dimen/text" />

            <TextView
                android:id="@+id/nowLatLng"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="（22.531112, 120.370979）"
                android:textSize="@dimen/text" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="259dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_gravity="left"
                android:layout_marginStart="0dp"
                android:text="@string/cancel"
                android:textSize="@dimen/button" />

            <Button
                android:id="@+id/confirm"
                android:tag="confirm"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginEnd="2dp"
                android:text="@string/confirm"
                android:textSize="@dimen/button" />

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>