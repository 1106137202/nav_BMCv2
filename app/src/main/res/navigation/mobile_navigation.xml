<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_todo">

    <fragment
        android:id="@+id/nav_todo"
        android:name="com.example.nav_bmcv2.ui.todo.TodoFragment"
        android:label="待辦工單"
        tools:layout="@layout/fragment_todo" />

    <fragment
        android:id="@+id/nav_undone"
        android:name="com.example.nav_bmcv2.ui.undone.UndoneFragment"
        android:label="未進行工單"
        tools:layout="@layout/fragment_undone" />

    <fragment
        android:id="@+id/nav_finish"
        android:name="com.example.nav_bmcv2.ui.finish.FinishFragment"
        android:label="已進行工單"
        tools:layout="@layout/fragment_finish" />


    <fragment
        android:id="@+id/nav_total"
        android:name="com.example.nav_bmcv2.ui.total.TotalFragment"
        android:label="全部清單"
        tools:layout="@layout/total_fragment" />

    <fragment
        android:id="@+id/nav_rate"
        android:name="com.example.nav_bmcv2.ui.rate.RateFragment"
        android:label="工單績效"
        tools:layout="@layout/rate_fragment" />

    <fragment
        android:id="@+id/nav_map"
        android:name="com.example.nav_bmcv2.mapTool.MapsFragment"
        android:label="地圖"
        tools:layout="@layout/fragment_maps" />

    <fragment
        android:id="@+id/nav_mapList"
        android:name="com.example.nav_bmcv2.ui.mapList.MapListFragment"
        android:label="清單"
        tools:layout="@layout/map_list_fragment"/>

    <fragment
        android:id="@+id/nav_result"
        android:name="com.example.nav_bmcv2.ui.total.ResultListFragment"
        android:label="結果"
        tools:layout="@layout/result_list_fragment"
        />

    <fragment
        android:id="@+id/nav_announcement"
        android:name="com.example.nav_bmcv2.ui.announcement.AnnouncementFragment"
        android:label="佈告欄"
        tools:layout="@layout/announcement_fragment"
        />


</navigation>